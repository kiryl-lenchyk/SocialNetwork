@using WebUi.Models
@model WebUi.Models.RegisterViewModel

@{
    ViewBag.Title = "Registration";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-8 col-xs-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-8 col-xs-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
        <div class="col-md-8 col-xs-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
        </div>
    </div>
    <hr/>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
        <div class="col-md-8 col-xs-10">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Surname, new {@class = "col-md-2 control-label"})
        <div class="col-md-8 col-xs-10">
            @Html.TextBoxFor(m => m.Surname, new {@class = "form-control"})
        </div>  
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDay, new {@class = "col-md-2 control-label"})
        <div class="col-md-8 col-xs-10">
            @Html.TextBoxFor(m => m.BirthDay, new {@class = "form-control", type="date"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Sex, new {@class = "col-md-2 control-label"})
        <div class="col-md-8 col-xs-10">
            @Html.Action("SexList")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AboutUser, new { @class = "col-md-2 control-label" })
        <div class="col-md-8 col-xs-10">
            @Html.TextAreaFor(m => m.AboutUser, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-md-8 col-xs-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}
