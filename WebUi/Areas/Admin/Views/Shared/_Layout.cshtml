@using System.Web.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-md-3  col-xs-5 admin-menu">
            <h2> @WebConfigurationManager.AppSettings["ProjectName"] [Admin] </h2>
            <ul class="nav nav-pills nav-stacked">

                <li role="presentation">@Html.ActionLink("Main site", "Index", new { area = "", controller = "Home" })</li>
                <li role="presentation" @(ViewBag.Title == "User manage" ? "class=active" : "")>@Html.ActionLink("User manage", "Index", "User")</li>
                <li role="presentation" @(ViewBag.Title == "Message manage" ? "class=active" : "")>@Html.ActionLink("Message manage", "Index", "Message")</li>
            </ul>
        </div>
        <div class="col-sm-7 col-md-8  col-xs-6">
            @RenderBody()
        </div>
    </div>
</div>
<nav class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
        <footer align="center">
            <p>&copy; @DateTime.Now.Year - @WebConfigurationManager.AppSettings["ProjectName"]</p>
        </footer>
    </div>
</nav>


@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)
</body>
</html>



